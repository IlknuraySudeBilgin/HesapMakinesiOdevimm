<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cozum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sonuc"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text=" "
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_above="@+id/buttons_layout"
        android:hint="0"
        android:layout_margin="16dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_C"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ffa1c4"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_AC"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cornerRadius="150dip"
                android:backgroundTint="#ffa1c4"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="AC" />

            

            <Button
                android:id="@+id/button_bolme"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#8e8e8e"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_yedi"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_sekiz"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_dokuz"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_carpma"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#8e8e8e"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_dort"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_bes"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_alti"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_cikarma"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#8e8e8e"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_bir"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_iki"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_uc"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#ff559f"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_toplama"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="#8e8e8e"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            

            <Button
                android:id="@+id/button_sifir"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cornerRadius="150dip"
                android:backgroundTint="#ff559f"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/button_nokta"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cornerRadius="150dip"
                android:backgroundTint="#ffa1c4"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/button_esittir"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cornerRadius="150dip"
                android:backgroundTint="#8e8e8e"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>